## FIBONNACCI SERIES WHERE SUM SHOULD NOT EXCEED N 

import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int t = in.nextInt();
        for(int a0 = 0; a0 < t; a0++){
            long n = in.nextLong();
            long first = 1;
            long second = 2;
            long sum = 0 ;
            long evenssum = 0;
            while(sum<=n){
                
                sum = first + second;
                if(second%2==0) evensum+=second;
                first=second;
                second = sum; 
            }
            System.out.println(seriessum);
        }
    }
}
